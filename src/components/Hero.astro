---
import { Image } from 'astro:assets'; 
const { title, image } = Astro.props; 
---

<div class="hero">
  <h1 class="hero-text reveal">{title}</h1>
  <Image src={image} alt={title} loading={'eager'}/> 
</div>

<style>
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-text {
    position: absolute;
    z-index: 1;
    color: #fff;
    font-size: 40px;
    text-align: center;
    text-transform: uppercase;
    font-kerning: none;
    letter-spacing: .6em;
  }

  @media screen and (max-width: 768px) {
    .hero-text {
      font-size: 28px;
      letter-spacing: .5em !important;
      line-height: 51px;
      text-align: center;
      
    }
  }


  @media screen and (max-width: 900px) {
    .hero{
      height: 95vh;
      max-height: 900px;
    }
  }
</style>


<script>
    

  import ScrollReveal from 'scrollreveal';
  
  document.addEventListener("astro:page-load", () => {
  
  ScrollReveal().reveal(".reveal", {
      delay: 375,
  duration: 500,
  reset: false
  });

  });


  
</script>